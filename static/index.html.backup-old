    <script>
        const chatContainer = document.getElementById('chatContainer');
        const userInput = document.getElementById('userInput');
        const sendBtn = document.getElementById('sendBtn');
        let conversationHistory = [];
        
        // Handle category card expansion
        document.querySelectorAll('.category-card').forEach(card => {
            const header = card.querySelector('.category-header');
            header.addEventListener('click', function(e) {
                // Don't trigger if clicking on a prompt button
                if (e.target.closest('.prompt-button')) return;
                
                // Close all other cards
                document.querySelectorAll('.category-card').forEach(otherCard => {
                    if (otherCard !== card) {
                        otherCard.classList.remove('expanded');
                    }
                });
                
                // Toggle this card
                card.classList.toggle('expanded');
            });
        });

        // Handle prompt button clicks from category cards
        document.querySelectorAll('.prompt-button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation(); // Prevent card toggle
                const promptText = this.getAttribute('data-prompt');
                userInput.value = promptText;
                sendMessage();
            });
        });
        
        // Handle sample prompt clicks (legacy sidebar prompts)
        document.querySelectorAll('.prompt-item').forEach(prompt => {
            prompt.addEventListener('click', function() {
                const promptText = this.getAttribute('data-prompt');
                userInput.value = promptText;
                sendMessage();
            });
        });
        
        // Send message on Enter key
        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });
        
        // Send message on button click
        sendBtn.addEventListener('click', sendMessage);
        
        async function sendMessage() {
            const message = userInput.value.trim();
            if (!message) return;
            
            // Remove welcome message if exists
            const welcomeMsg = document.querySelector('.welcome-state');
            if (welcomeMsg) {
                welcomeMsg.remove();
            }
            
            // Add user message to chat
            addMessage(message, 'user');
            userInput.value = '';
            
            // Disable input while processing
            userInput.disabled = true;
            sendBtn.disabled = true;
            sendBtn.textContent = 'Thinking...';
            
            try {
                // Get user info from session
                const userInfo = sessionStorage.getItem('userInfo');
                const user = userInfo ? JSON.parse(userInfo) : null;
                const accessToken = sessionStorage.getItem('accessToken');
                
                // Prepare headers with Authorization token if available
                const headers = {
                    'Content-Type': 'application/json',
                };
                if (accessToken) {
                    headers['Authorization'] = `Bearer ${accessToken}`;
                }
                
                const response = await fetch('/api/chat', {
                    method: 'POST',
                    headers: headers,
                    body: JSON.stringify({
                        message: message,
                        conversation_history: conversationHistory,
                        user_email: user?.email,
                        user_name: user?.name
                    })
                });
                
                const data = await response.json();
                addMessage(data.response, 'assistant');
                
                // Update conversation history
                conversationHistory = data.conversation_history || [];
                
            } catch (error) {
                console.error('Error:', error);
                addMessage('Sorry, I encountered an error. Please try again.', 'assistant');
            } finally {
                // Re-enable input
                userInput.disabled = false;
                sendBtn.disabled = false;
                sendBtn.textContent = 'Send ✈️';
                userInput.focus();
            }
        }
        
        function addMessage(text, role) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${role}`;
            
            const contentDiv = document.createElement('div');
            contentDiv.className = 'message-content';
            
            // Convert markdown-style formatting to HTML
            let formattedText = text
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/\n/g, '<br>');
            
            // Check if there's a table in the response
            if (formattedText.includes('|')) {
                formattedText = convertMarkdownTableToHtml(formattedText);
            }
            
            contentDiv.innerHTML = formattedText;
            messageDiv.appendChild(contentDiv);
            chatContainer.appendChild(messageDiv);
            
            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
        
        function convertMarkdownTableToHtml(text) {
            const lines = text.split('<br>');
            let inTable = false;
            let tableHtml = '';
            let result = '';
            
            for (let i = 0; i < lines.length; i++) {
                const line = lines[i].trim();
                
                if (line.startsWith('|') && line.endsWith('|')) {
                    if (!inTable) {
                        inTable = true;
                        tableHtml = '<div class="table-wrapper"><table>';
                    }
                    
                    // Skip separator lines
                    if (line.includes('---')) {
                        continue;
                    }
                    
                    const cells = line.split('|').filter(cell => cell.trim());
                    const isHeader = i === 0 || (result === '' && tableHtml === '<div class="table-wrapper"><table>');
                    const tag = isHeader ? 'th' : 'td';
                    
                    tableHtml += '<tr>';
                    cells.forEach(cell => {
                        tableHtml += `<${tag}>${cell.trim()}</${tag}>`;
                    });
                    tableHtml += '</tr>';
                } else {
                    if (inTable) {
                        tableHtml += '</table></div>';
                        result += tableHtml + '<br>';
                        tableHtml = '';
                        inTable = false;
                    }
                    result += line + '<br>';
                }
            }
            
            if (inTable) {
                tableHtml += '</table></div>';
                result += tableHtml;
            }
            
            return result;
        }
        
        // Auto-focus input on load
        window.addEventListener('load', () => {
            userInput.focus();
            // Load context on page load
            loadContext();
            // Refresh context every 30 seconds
            setInterval(loadContext, 30000);
            // Load user profile
            loadUserProfile();
        });
        
        // Load user profile from session storage
        function loadUserProfile() {
            console.log('🔍 Loading user profile...');
            
            // Check if we just completed login
            const loginComplete = sessionStorage.getItem('loginComplete');
            
            // Try sessionStorage first, fallback to localStorage
            let userInfo = sessionStorage.getItem('userInfo');
            if (!userInfo) {
                console.log('📦 No sessionStorage, trying localStorage...');
                userInfo = localStorage.getItem('userInfo');
                if (userInfo) {
                    // Copy from localStorage to sessionStorage
                    sessionStorage.setItem('userInfo', userInfo);
                    console.log('✅ Restored from localStorage');
                }
            }
            
            console.log('📦 User info:', userInfo ? 'Found' : 'Not found');
            console.log('🔑 Login complete flag:', loginComplete);
            
            if (userInfo) {
                try {
                    const user = JSON.parse(userInfo);
                    console.log('👤 Parsed user:', user);
                    
                    // Clear the login complete flag
                    sessionStorage.removeItem('loginComplete');
                    
                    document.getElementById('userProfile').style.display = 'flex';
                    document.getElementById('userName').textContent = user.name || 'User';
                    document.getElementById('userEmail').textContent = user.email || '';

                    // Set avatar initials
                    const initials = user.name ? user.name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase() : 'U';
                    document.getElementById('userAvatar').textContent = initials;
                    
                    console.log('✅ User profile loaded:', user.name);
                } catch (error) {
                    console.error('❌ Error parsing user info:', error);
                }
            } else {
                // Check if running locally - use demo mode ONLY if no login
                const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
                
                if (isLocal) {
                    console.log('🏠 Local mode + No login - using demo user');
                    const demoUser = {
                        name: 'Demo User (Local)',
                        email: 'demo@localhost',
                        id: 'demo-local'
                    };
                    sessionStorage.setItem('userInfo', JSON.stringify(demoUser));
                    
                    document.getElementById('userProfile').style.display = 'flex';
                    document.getElementById('userName').textContent = demoUser.name;
                    document.getElementById('userEmail').textContent = demoUser.email;
                    document.getElementById('userAvatar').textContent = 'DU';
                    
                    console.log('✅ Demo user profile loaded');
                } else if (loginComplete === 'true') {
                    // Just completed login but no userInfo - wait and retry
                    console.warn('⚠️ Login just completed, retrying in 500ms...');
                    setTimeout(() => {
                        window.location.reload();
                    }, 500);
                } else {
                    // No user info and not just logged in - redirect to login
                    console.warn('⚠️ No user info - redirecting to login');
                    window.location.replace('/login.html');
                }
            }
        }
        
        // Context Widget Functions
        function toggleContextWidget() {
            const widget = document.getElementById('contextWidget');
            widget.classList.toggle('collapsed');
            const toggleBtn = widget.querySelector('.context-widget-toggle');
            toggleBtn.textContent = widget.classList.contains('collapsed') ? '+' : '−';
        }
        
        async function loadContext() {
            try {
                const response = await fetch('/api/context');
                if (!response.ok) throw new Error('Failed to load context');
                
                const context = await response.json();
                
                // Update Subscription
                document.getElementById('contextSubscription').textContent = 
                    context.subscription.name || 'Unknown';
                document.getElementById('contextSubscriptionId').textContent = 
                    context.subscription.id || '';
                
                // Update Identity
                document.getElementById('contextIdentity').textContent = 
                    context.identity.type || 'Unknown';
                document.getElementById('contextPrincipalId').textContent = 
                    context.identity.principal_id || '';
                
                // Update Permissions
                updatePermission('permRead', context.permissions.read);
                updatePermission('permWrite', context.permissions.write);
                updatePermission('permModify', context.permissions.modify);
                updatePermission('permDelete', context.permissions.delete);
                
            } catch (error) {
                console.error('Error loading context:', error);
                document.getElementById('contextSubscription').textContent = 'Error loading';
                document.getElementById('contextIdentity').textContent = 'Error loading';
            }
        }
        
        function updatePermission(elementId, allowed) {
            const element = document.getElementById(elementId);
            if (elementId === 'permDelete') {
                // Delete is always admin disabled
                element.className = 'permission-status admin-disabled';
                element.textContent = '⛔ Admin Disabled';
            } else if (allowed) {
                element.className = 'permission-status allowed';
                element.textContent = '✓ Allowed';
            } else {
                element.className = 'permission-status denied';
                element.textContent = '✗ Denied';
            }
        }
    </script>
